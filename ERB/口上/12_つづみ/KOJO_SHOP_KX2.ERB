	;調教対象の反抗刻印Lv5以上
	IF MARK:反抗刻印 >= 5
		PRINTFORMW 
	;調教対象の反抗刻印Lv4以下
	ELSE
		PRINTFORMW 
	ENDIF
	RETURN 1
ENDIF

