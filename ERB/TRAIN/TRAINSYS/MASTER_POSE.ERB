										TCVAR:MASTER:姿勢 = 10
										TCVAR:MASTER:位置上下 = 0
										TCVAR:MASTER:位置前後 = 1
									ENDIF
							ENDSELECT
						ENDIF
					;手・道具類など
					ELSE
						;すでに仰向けの場合
						IF TFLAG:仰向け
							TCVAR:MASTER:姿勢 = 1
							TCVAR:MASTER:位置上下 = 0
							TCVAR:MASTER:位置前後 = 1
						ELSE
							;前回の姿勢によって補正
							;口と違い、前後・上下の指定はありません
							SELECTCASE TCVAR:MASTER:前回の姿勢
								;仰向け
								CASE 1
									;イきそうなら3/4で座りに変化する
