		CASE 2, 6
			TCVAR:MASTER:姿勢 = 10
			TCVAR:MASTER:位置前後 = 3
			TCVAR:MASTER:位置上下 = 0
		;騎乗位（逆レイプ）
		CASE 3
			TCVAR:MASTER:姿勢 = 1
			TCVAR:MASTER:位置前後 = 0
			TCVAR:MASTER:位置上下 = 1
		;対面座位
		CASE 4
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 0
		;背面座位
		CASE 5
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 3
			TCVAR:MASTER:位置上下 = 0
	ENDSELECT
;ACTごとの姿勢情報を代入
;ただしCOM次第では変更になる（暴れるなど）
ELSE
	;ACT分類による設定
	SELECTCASE MENU(GET_ACTM(TFLAG:ACT))
		CASE "愛撫", "道具"
			;どこを愛撫しているか
			SELECTCASE CARESS_SPOT(TARGET)
				;Ａ
				CASE 3
					;口でしている
					IF MA_PLAYER(1) == 1
						;すでに仰向けの場合（難易度高い気がするが）
						IF TFLAG:仰向け
							TCVAR:MASTER:姿勢 = 1
							TCVAR:MASTER:位置上下 = 0
							TCVAR:MASTER:位置前後 = 1
						;そうでなければ四つん這い
						ELSE
							TCVAR:MASTER:姿勢 = 3
							TCVAR:MASTER:位置上下 = 0
							TCVAR:MASTER:位置前後 = 2
						ENDIF
