	;TCVAR:MASTER:位置前後 = TEQUIP:押し倒し中 || IS_NOWACTNAME("押し倒す") ? 1 # 0
	TCVAR:MASTER:位置前後 = 1
	TCVAR:MASTER:位置上下 = 1
;性交・性奉系ACTは先に処理
ELSEIF MENUMATCH(TFLAG:ACT, "性交") || MENUMATCH(TFLAG:ACT, "性奉")
	;ACT毎の体位による設定
	SELECTCASE GET_ACTNAME(TFLAG:ACT)
		CASE "正常位"
			TCVAR:MASTER:姿勢 = 1
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 1
		CASE "後背位", "アナルセックス"
			TCVAR:MASTER:姿勢 = 3
			TCVAR:MASTER:位置前後 = 2
			TCVAR:MASTER:位置上下 = 0
		CASE "騎乗位"
			TCVAR:MASTER:姿勢 = 10
			TCVAR:MASTER:位置前後 = 0
			TCVAR:MASTER:位置上下 = 2
		CASE "対面座位"
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 0
		CASE "背面座位"
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 2
			TCVAR:MASTER:位置上下 = 0
		CASE "正常位させる"
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 2
		CASE "後背位させる", "アナルセックスさせる"
			TCVAR:MASTER:姿勢 = 10
			TCVAR:MASTER:位置前後 = 3
			TCVAR:MASTER:位置上下 = 0
		CASE "逆レイプ"
			TCVAR:MASTER:姿勢 = 1
			TCVAR:MASTER:位置前後 = 0
			TCVAR:MASTER:位置上下 = 1
		CASE "対面座位させる"
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 0
		CASE "背面座位させる"
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 3
			TCVAR:MASTER:位置上下 = 0
	ENDSELECT
;性交中
ELSEIF TEQUIP:性交中
	;TEQUIP毎の体位による設定
	SELECTCASE TEQUIP:性交中
		;正常位
		CASE 1
			TCVAR:MASTER:姿勢 = 1
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 1
		;後背位、アナルセックス
		CASE 2, 6
			TCVAR:MASTER:姿勢 = 3
			TCVAR:MASTER:位置前後 = 2
			TCVAR:MASTER:位置上下 = 0
		;騎乗位
		CASE 3
			TCVAR:MASTER:姿勢 = 10
			TCVAR:MASTER:位置前後 = 0
			TCVAR:MASTER:位置上下 = 2
		;対面座位
		CASE 4
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 0
		;背面座位
		CASE 5
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 2
			TCVAR:MASTER:位置上下 = 0
	ENDSELECT
