										TCVAR:MASTER:姿勢 = 10
										TCVAR:MASTER:位置上下 = 2
										TCVAR:MASTER:位置前後 = 1
									ENDIF
							ENDSELECT
						ENDIF
					;足でしている
					ELSEIF MC_PLAYER(1) == 7 || MV_PLAYER(1) == 7
						;すでに仰向けの場合
						IF TFLAG:仰向け
							TCVAR:MASTER:姿勢 = 1
							TCVAR:MASTER:位置上下 = 0
							TCVAR:MASTER:位置前後 = 1
						ELSE
							;前回の姿勢によって補正
							SELECTCASE TCVAR:MASTER:前回の姿勢
								;仰向けは継続
								CASE 1
									TCVAR:MASTER:姿勢 = 1
									TCVAR:MASTER:位置上下 = 0
									TCVAR:MASTER:位置前後 = 1
								;それ以外
								CASEELSE
									;Ｃでイった直後は1/2で仰向けに変化する
									IF NOWEX:MASTER:Ｃ絶頂 && RAND:2
										TCVAR:MASTER:姿勢 = 1
										TCVAR:MASTER:位置上下 = 0
										TCVAR:MASTER:位置前後 = 1
									;そうでなければ座り
									ELSE
										TCVAR:MASTER:姿勢 = 2
										TCVAR:MASTER:位置上下 = 0
										TCVAR:MASTER:位置前後 = 1
									ENDIF
							ENDSELECT
						ENDIF
					;口でしている
					ELSEIF MC_PLAYER(1) == 1 || MV_PLAYER(1) == 1
						;すでに仰向けの場合
						IF TFLAG:仰向け
							TCVAR:MASTER:姿勢 = 1
							;シックスナインは顔面騎乗に流れているはず
							TCVAR:MASTER:位置上下 = 0
							TCVAR:MASTER:位置前後 = 1
						ELSE
							;前回の姿勢によって補正
							SELECTCASE TCVAR:MASTER:前回の姿勢
								;仰向け
								CASE 1
									;イきそうなら3/4で座りに変化する
									IF TCVAR:MASTER:イきそう && RAND:4
										TCVAR:MASTER:姿勢 = 2
										TCVAR:MASTER:位置上下 = 0
										TCVAR:MASTER:位置前後 = 1
									;1/4で座りに変化する
