ELSEIF TEQUIP:性交奉仕中
	;TEQUIP毎の体位による設定
	SELECTCASE TEQUIP:性交奉仕中
		;正常位
		CASE 1
			TCVAR:MASTER:姿勢 = 2
			TCVAR:MASTER:位置前後 = 1
			TCVAR:MASTER:位置上下 = 2
