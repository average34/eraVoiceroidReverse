						IF TFLAG:仰向け
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "起立", "対面", "無効")
						ELSE
							;前回の姿勢によって補正
							SELECTCASE TCVAR:MASTER:前回の姿勢
								;仰向けは継続
								CASE 1
									CALL SET_POSE(MASTER, "仰向")
									CALL SET_POSE(TARGET, "起立", "対面", "無効")
								;それ以外
								CASEELSE
									;Ｃでイった直後は1/2で仰向けに変化する
									IF NOWEX:MASTER:Ｃ絶頂 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
