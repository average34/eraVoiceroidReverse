	SELECTCASE RESULTS
		CASE KEY_A
			IF SELECTCOM_RANK < TFLAG:可能なCOM数
				REDRAW 1
				DOTRAIN SELECTCOM
				RETURN 1
			ELSE
				SELECTCASE SELECTUSERCOM
					CASE 0
						CALL SHOW_EQUIP
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 1
						CALL STAIN_INFO
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 2
						CALL SHOW_CHARADATA_PAD
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 3
						CALL UPCHECK_REV
						WAIT
						;TFLAG:可能なCOM数 = 0
						GOTO START
				ENDSELECT
			ENDIF
		CASE KEY_UP
			SIF --SELECTCOM_RANK == -1
				SELECTCOM_RANK = TFLAG:可能なCOM数
			SIF SELECTCOM_RANK < TFLAG:可能なCOM数
				SELECTUSERCOM = 0
		CASE KEY_DOWN
			SIF ++SELECTCOM_RANK == TFLAG:可能なCOM数 + 1
				SELECTCOM_RANK = 0
			SIF SELECTCOM_RANK < TFLAG:可能なCOM数
				SELECTUSERCOM = 0
			CASE KEY_LEFT
				SIF --SELECTUSERCOM == -1
					SELECTUSERCOM = 3
			CASE KEY_RIGHT
				SIF ++SELECTUSERCOM == 4
					SELECTUSERCOM = 0
				
		CASEELSE
			ENCODETOUNI %RESULTS%
			IF INRANGE(RESULT:1, 10000, 10999)
				DOTRAIN RESULT:1 - 10000
				RETURN 1
			ELSEIF INRANGE(RESULT:1, 11000, 11999)
				SELECTCASE RESULT:1 - 11000
					CASE 0
						CALL SHOW_EQUIP
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 1
						CALL STAIN_INFO
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 2
						CALL SHOW_CHARADATA
						;TFLAG:可能なCOM数 = 0
						GOTO START
					CASE 3
						CALL UPCHECK_REV
						WAIT
						;TFLAG:可能なCOM数 = 0
						GOTO START
				ENDSELECT
			ENDIF
	ENDSELECT
ELSE
	REDRAW 1
	INPUT
	SELECTCASE RESULT
		CASE 0 TO 100
			SIF TRAINNAME:RESULT == ""
				GOTO START
			SELECTCOM = RESULT
			RESULT = 0
			CALL COMABLE(SELECTCOM)
			SIF RESULT == 0
				GOTO START
			DOTRAIN SELECTCOM
			RETURN 1
		CASE 800
			CALL SHOW_EQUIP
			;TFLAG:可能なCOM数 = 0
			GOTO START
		CASE 801
			CALL STAIN_INFO
			;TFLAG:可能なCOM数 = 0
			GOTO START
		CASE 802
			CALL SHOW_CHARADATA
			;TFLAG:可能なCOM数 = 0
			GOTO START
		CASE 803
			CALL UPCHECK_REV
			WAIT
			;TFLAG:可能なCOM数 = 0
			GOTO START
		CASE 899
			IF FLAG:デバッグ
				PRINTFORML TFLAG:可能なCOM数 = {TFLAG:92}
				;TFLAG:可能なCOM数 = 0
				GOTO START
			ENDIF
		CASE 997
			IF FLAG:デバッグ
				CALL ACTION_RESERVATION
				;TFLAG:可能なCOM数 = 0
				GOTO START
			ENDIF
		CASE 998
			IF FLAG:デバッグ
				CALL SHOW_HEAT
				;TFLAG:可能なCOM数 = 0
				GOTO START
			ENDIF
		CASE 999
			;強制終了させる際にSHOW_USERCOM内でBEGINできないのでEVENCOMに落として終わらせる
			IF FLAG:デバッグ
				DOTRAIN 999
				RETURN 1
			ENDIF
	ENDSELECT
ENDIF
GOTO START


@SHOW_USERCOM_COM(ARG, ARG:1)
TSTR:実行COM名 = %TRAINNAME:ARG%
SIF ARG == 71 && PENIS(TARGET)
	TSTR:実行COM名 = フェラチオ
;同一COM色変化を一度止める
;SETCOLOR PREVCOM == ARG ? 0xC0C070 # ARG:1
;負荷によって色を変える
IF SELECTCOM == ARG && FLAG:調教UIパッド化
	SETCOLOR 0x7070C0
	IF GET_COMEFFORT(TRAINNAME:ARG) == 1
		CALL BRIGHTCOLOR, 70
	ELSEIF GET_COMEFFORT(TRAINNAME:ARG) >= 2
		CALL BRIGHTCOLOR, 40
	ENDIF
ELSE
	SELECTCASE GET_COMEFFORT(TRAINNAME:ARG)
		CASE 0
			;デフォ0xC0C0C0
			SETCOLOR ARG:1
		CASE 1
			SETCOLOR 0x909090
		CASEELSE
			SETCOLOR 0x606060
	ENDSELECT
ENDIF
IF FLAG:調教UIパッド化
	PRINTBUTTON @"%TSTR:3, 27 + 1%", UNICODE(10000 + ARG)
ELSE
	PRINTFORMC %TSTR:3%[{ARG,3}] 
ENDIF
LOCAL:1 = COM_VITALITY(, TRAINNAME:ARG)
LOCAL:2 = MIN(MAX(COM_VITALITY(, TRAINNAME:ARG), MAXBASE:MASTER:気力), COM_LIM_INS())
LOCAL:3 = COM_VITALITY(, TRAINNAME:ARG) > MAXBASE:MASTER:気力 ? 32 * COM_VITALITY(, TRAINNAME:ARG) / MAXBASE:MASTER:気力 # 32
LOCAL:4 = TFLAG:抵抗不能 || COM_VITALITY(, TRAINNAME:ARG) > BASE:MASTER:気力 ? 0xC07070 # 0x70C070
LOCAL:5 = 0x205020
PRINTFORM ({LOCAL:1, 4}) 
