CALL PRINT_COLORBAR(LOCAL:1, LOCAL:2, LOCAL:3, UNICODE(0x2584), UNICODE(0x2584), LOCAL:4, LOCAL:5)
PRINTL 


;-------------------------------------------------
;関数名:SHOW_USERCOM_COM2
;概　要:COM表示関数(HTML_PRINT対応版)
;引　数:ARG:0…COM番号
;　　　 ARG:1…文字表示色
;戻り値:なし(RESULT保護)
;@SHOW_USERCOM_COM関数のHTML_PRINT対応版。なんかケオスめいてしまった
;新規作成@revkoishi(14/07/07)
;-------------------------------------------------
@SHOW_USERCOM_COM2(ARG:0, ARG:1)
TSTR:実行COM名 '= \@ ARG:0 == 71 && PENIS(TARGET) ? フェラチオ # %TRAINNAME:(ARG:0)% \@
{
HTML_PRINT HTMLFONT(\@ FLAG:調教UIパッド化 ? # %" " * MAX(PRINTCLENGTH() - STRLENS(TSTR:実行COM名) - 6, 0)% \@
         + HTMLBUTTON(\@ FLAG:調教UIパッド化 ? %TSTR:実行COM名, 28% # %TSTR:実行COM名%[{ARG:0, 3}]%" "% \@,
           \@ FLAG:調教UIパッド化 ? %UNICODE(10000 + ARG:0)% # %TOSTR(ARG:0)% \@, COM_RANK(GET_COMEFFORT(TRAINNAME:(ARG:0))))
         + @"({COM_VITALITY(, TRAINNAME:(ARG:0)), 4}) ", , (SELECTCOM == ARG:0 && FLAG:調教UIパッド化)
           ? SIGNV(GET_COMEFFORT(TRAINNAME:(ARG:0)) - 1, 0x7070C0, BRIGHTCOLORF(70, 0x7070C0), BRIGHTCOLORF(40, 0x7070C0))
           # SIGNV(GET_COMEFFORT(TRAINNAME:(ARG:0)) - 1, ARG:1, 0x909090, 0x606060))
         + HTML_COLORBAR(COM_VITALITY(, TRAINNAME:(ARG:0)),
           LIMIT(COM_VITALITY(, TRAINNAME:(ARG:0)), COM_LIM_INS(), MAXBASE:MASTER:気力),
           COM_VITALITY(, TRAINNAME:(ARG:0)) > MAXBASE:MASTER:気力 ? 32 * COM_VITALITY(, TRAINNAME:(ARG:0)) / MAXBASE:MASTER:気力 # 32,
           UNICODE(0x2584), UNICODE(0x2584),
           TFLAG:抵抗不能 || COM_VITALITY(, TRAINNAME:(ARG:0)) > BASE:MASTER:気力 ? 0xC07070 # 0x70C070, 0x205020)
}
RETURN RESULT


