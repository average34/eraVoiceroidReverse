ELSEIF IS_NOWACTNAME("針")
	LOCAL:2 = 7
ELSEIF IS_NOWACTNAME("縄")
	LOCAL:2 = 8
ELSEIF IS_NOWACTNAME("アイマスク")
	LOCAL:2 = 9
ELSEIF IS_NOWACTNAME("治療する")
	LOCAL:2 = -10
ELSEIF IS_NOWACTNAME("正常位") || TEQUIP:性交中 == 1
	LOCAL:2 = 12
ELSEIF IS_NOWACTNAME("後背位") || TEQUIP:性交中 == 2
	LOCAL:2 = 18
