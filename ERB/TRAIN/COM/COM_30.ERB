SIF IS_POLICY("今", "異常")
	LOCAL += RAND:7
;結局返答がないので、自分が納得できる形に弄ります@/L
IF LOCAL > 0 && !IS_NOWACTNAME("公衆肉便器プレイ")
	;お仕置きポイント加算
	TFLAG:お仕置きポイント += LOCAL
	;派生：怯えに対する苛立ち
	TFLAG:REACT派生 = 1
	;COM印象
	CALL SET_COMIMP("0から遠ざかる")
ELSE
	;COM分類
	CALL SET_COMGRO("許しを乞う")
	;派生：「ふーん」
	TFLAG:REACT派生 = 0
	;COM印象
	CALL SET_COMIMP("0に近づく")
ENDIF
