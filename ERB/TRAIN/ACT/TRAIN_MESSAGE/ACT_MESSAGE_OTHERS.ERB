	;確認着衣を脱衣(着衣)していた場合
	IF  TEQUIP:(ARG:2):LOCAL != 0 && !ARG == GETBIT(ARG:1, LOCAL)
		;二つ目以降は繋ぎ語も表示
		SIF LOCAL:1
			PRINT と
		;脱衣(着衣)内容を表示
		PRINTS CLOTHES(LOCAL, ARG:2)
		;表示数カウント
		LOCAL:1++
	ENDIF
	;確認する部位が無ければ脱出
	SIF LOCAL == 0
		BREAK
	;確認着衣を内側へシフト
	LOCAL--
WEND
;脱衣種表示時
