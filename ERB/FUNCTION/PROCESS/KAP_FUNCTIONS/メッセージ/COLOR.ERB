@SET_COLOR, ARGS, ARG = -1
SETCOLOR COLOR(ARGS, ARG)

;----------------------------------------------------------
;@COLOR
;ARGS 色名称
;ARG  明度をARGパーセントに変更
;----------------------------------------------------------
@COLOR, ARGS, ARG = -1
#FUNCTION
#LOCALSIZE 1
#DIM PREV
IF ARGS == "PREV"
	RETURNF PREV
ELSE
	PREV = GETCOLOR()
ENDIF
SELECTCASE TOUPPER(ARGS)
	CASE "RESET", "DEFAULT", "DEF"
		LOCAL = GETDEFCOLOR()
	CASE "BG"
		LOCAL = GETBGCOLOR()
	CASE "DEFBG"
		LOCAL = GETDEFBGCOLOR()
	CASE "RED", "赤"
		LOCAL =  0x990000
	CASE "P-RED", "PASTEL-RED", "パ赤"
		LOCAL =  0xC07070
	CASE "P-BLUE", "PASTEL-BLUE", "パ青"
		LOCAL =  0x7070C0
	CASE "P-GREEN", "PASTEL-GREEN", "パ緑"
		LOCAL =  0x70C070
	CASE "P-PURPLE", "PASTEL-PURPLE", "パ紫"
		LOCAL =  0xC070C0
	CASE "P-YELLOW", "PASTEL-YELLOW", "パ黄"
		LOCAL =  0x505020
	CASE "P-BGREEN", "P-BLUEGREEN", "PASTELDARK-BLUEGREEN", "パ青緑"
		LOCAL =  0x205050
	CASE "WHITE", "白"
		LOCAL =  0xC0C0C0
	CASE "BLACK", "黒"
		LOCAL =  0x000000
	CASE "AQUA", "水色"
		LOCAL =  0x66FFFF
	CASE "GRAY", "灰色"
		LOCAL =  0x404040
	CASE "LIGHT-GRAY", "明灰色"
		LOCAL =  0x777777
	CASE "PINK", "桃"
		LOCAL =  0xFFB3DE
	CASE "DARK-PINK", "黒桃"
		LOCAL =  0x990099
	CASE "YELLOW", "黄"
		LOCAL =  0xFFFF00
	CASE "FOCUS"
		LOCAL =  GETFOCUSCOLOR()
	CASEELSE
		IF ISNUMERIC(ARGS)
			LOCAL = TOINT(ARGS)
		ELSE
			THROW @COLORに登録されていない名称[%ARGS%]が指定されました。
		ENDIF
ENDSELECT
SIF ARG >= 0
	LOCAL = BRIGHTCOLORF(ARG, LOCAL)
RETURNF LOCAL


