	CASE IS > 9
		RETURNF @"\@ ARG:1 ? 多 # 強 \@"
	CASE IS > 4
		RETURNF "中"
	CASEELSE
		RETURNF @"\@ ARG:1 ? 少 # 弱 \@"
ENDSELECT


