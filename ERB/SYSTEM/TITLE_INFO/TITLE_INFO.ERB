@TITLE_INFO
#LOCALSIZE 2
#DIM INFO, 1000
#DIM LINE
#DIM NUM
LOCAL:1 = 0
SKIPDISP 1
REDRAW 0
;メッセージの有無を確認しリスト化
FOR LOCAL, 0, GAMEBASE_VERSION + 1
	TRYCCALLFORM INFO_%TOSTR(LOCAL, "0000")%
		INFO:(LOCAL:1) = LOCAL
		NUM = LOCAL:1
		LOCAL:1++
	CATCH
	ENDCATCH
NEXT
SKIPDISP 0
LINE = LINECOUNT
$START
CLEARLINE LINECOUNT - LINE
CALLFORM INFO_%TOSTR(INFO:NUM, "0000")%
CALL EQUATE_LINE, LINE + MAXLINE() - 2
DRAWLINE
CALL PRINTSBUTTON_C, "[4] 前のINFO", "4", NUM > 0, , COLOR("gray")
PRINTFORM %"",20%
PRINTBUTTON "[9] INFO終了", "9"
PRINTFORM %"",20%
CALL PRINTSBUTTON_C, "[6] 次のINFO", "6", INFO:(NUM + 1) > 0, , COLOR("gray")
PRINTL 
ONEINPUTS
SIF RESULTS == "4" && NUM > 0
	NUM--
SIF RESULTS == "6" && INFO:(NUM + 1) > 0
	NUM++
IF RESULTS == "9"
	REDRAW 1
	RETURN 0
ENDIF
GOTO START
