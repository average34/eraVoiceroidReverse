LOCAL = 0

;SANDBOX限定処理
;体力が減少すると調教中断したがる
SIF FLAG:モード == 1
	LOCAL += LINE_CALC(BASE:MASTER:体力 * 100 / MAXBASE:MASTER:体力, "100→0,0→25,LIMIT/0～25")

RETURN LOCAL


