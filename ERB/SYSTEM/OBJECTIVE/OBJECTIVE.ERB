[SKIPSTART]
;体力・気力管理
@OBJM_T_VIT(ARGS)
#LOCALSIZE 1
#DIMS 同一調教判定
#DIM L体力
#DIM L気力
#DIM 体力消費速度
#DIM 気力消費速度
#DIM 信頼度
#DIM ターン
#DIM 予測体力消費速度
#DIM 予測気力消費速度
#DIM 予測信頼度
#DIM 休憩
;同一調教判定
LOCALS = %SAME_TURN("調教")%
;同一調教でなければ
IF 同一調教判定 != LOCALS
	;変数初期化
	同一調教判定 = %LOCALS%
	体力消費速度 = 0
	気力消費速度 = 0
	信頼度 = 0
;休憩を挟んでいなければ
ELSEIF (DATABASE_I_AM("休憩") - 休憩) == 0
	;体力・気力消費量記録
	IF L体力 != 0 && BASE:MASTER:体力 != 0
		LOCAL = (L体力 - BASE:MASTER:体力) / (TFLAG:調教時間 - ターン)
		体力消費速度 = 信頼度 == 0 ? LOCAL # (体力消費速度 + LOCAL) / 2
	ENDIF
	IF L気力 != 0 && BASE:MASTER:気力 != 0
		LOCAL = (L気力 - BASE:MASTER:気力) / (TFLAG:調教時間 - ターン)
		気力消費速度 = 信頼度 == 0 ? LOCAL # (気力消費速度 + LOCAL) / 2
	ENDIF
	信頼度 += TFLAG:調教時間 - ターン
ENDIF
L体力 = BASE:MASTER:体力
L気力 = BASE:MASTER:気力
ターン = TFLAG:調教時間
休憩 = DATABASE_I_AM("休憩")

NOSKIP
PRINTVL 体力消費速度
PRINTVL 気力消費速度
PRINTVL L体力
PRINTVL L気力
ENDNOSKIP
[SKIPEND]

